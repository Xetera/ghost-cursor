{
  "name": "ghost-cursor",
  "version": "1.2.0",
  "description": "Move your mouse like a human in puppeteer or generate realistic movements on any 2D plane",
  "repository": "https://github.com/Xetera/ghost-cursor",
  "main": "lib/spoof.js",
  "types": "lib/spoof.d.ts",
  "scripts": {
    "prepare": "husky && yarn lint && yarn build",
    "build": "tsc",
    "lint": "yarn ts-standard --fix",
    "test": "jest"
  },
  "keywords": [
    "bezier-curve",
    "mouse-movement",
    "botting"
  ],
  "author": "Xetera",
  "license": "ISC",
  "files": [
    "lib/**/*"
  ],
  "dependencies": {
    "@types/bezier-js": "4",
    "bezier-js": "^6.1.3",
    "debug": "^4.3.4"
  },
  "devDependencies": {
    "@swc/core": "^1.2.194",
    "@swc/jest": "^0.2.21",
    "@types/debug": "^4.1.9",
    "@types/jest": "29",
    "husky": "9",
    "jest": "29",
    "jest-puppeteer": "10",
    "puppeteer": "22",
    "ts-standard": "12",
    "typescript": "5"
  },
  "jest": {
    "verbose": true,
    "preset": "jest-puppeteer",
    "modulePathIgnorePatterns": [
      "./lib",
      "./src/test.ts"
    ],
    "reporters": [
      "default",
      "github-actions"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": "@swc/jest"
    }
  }
}
